{% extends 'layout.html.twig' %}
{% block link %}
    <link rel="stylesheet prefetch" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css">
    <link rel="stylesheet prefetch" href="https://fonts.googleapis.com/css?family=Coda">
    <link rel="stylesheet prefetch" href="https://fonts.googleapis.com/css?family=Gloria+Hallelujah|Permanent+Marker" >
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Rum+Raisin&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
{% endblock %}
{% block stylesheet %}<link rel="stylesheet" href="/assets/css/wildgames.css"> {% endblock %}

{% block title %} Wild Games {% endblock %}

{% block content %}

<header>
    <h1>Wild Games</h1>
</header>

<div class="container mt-3">

    <div class="card text-center" style="width:400px; height:630px">
        <img class="card-img-top" src="/assets/images/backCard.png" alt="Card image" style="width:100%">
        <div class="card-body">
            <h4 class="card-title">Wild Memory Game</h4>
            <p class="card-text">Testez votre mémoire! <br> Faites correspondre chaque paire de cartes pour gagner la partie!</p>
            <a href="wildMemoryGame" class="btn btn-primary">Play</a>
        </div>
    </div>

    <div class="card text-center" style="width:400px; height:630px">
        <img class="card-img-top" src="/assets/images/backCard.png" alt="Card image" style="width:100%">
        <div class="card-body">
            <h4 class="card-title">Wild Math Game</h4>
            <p class="card-text">Testez votre mémoire! <br> Calcul mathématique en 10 secondes</p>
            <a href="wildMathGame" class="btn btn-primary">Play</a>
        </div>
    </div>

</div>

{% endblock %}

