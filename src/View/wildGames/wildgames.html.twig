{% extends 'layout.html.twig' %}
{% block link %}
{% endblock %}
{% block stylesheet %} <link href="https://fonts.googleapis.com/css?family=Teko:700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/assets/css/home.css">{% endblock %}

{% block title %} Wild Games {% endblock %}

{% block content %}

<header>
    <h1 class="header">Wild Games</h1>
</header>
    <p class="header">Fun games offered by our wild developers!</p>


    <div class="card-pages">
    <div class="game card game">
        <div class="card-home">
        <img class="card-img-top" src="/assets/images/backCard.png" alt="Card image">
            <h4 class="card-title">Wild Math Game</h4>

            <p class="card-text">Test Your Memory!<br> Math Calculation in 10 seconds</p>
            {% if(userName != null) %}
                <a href="wildMathGame" class="gamebtn">Play</a>
            {% else %}
                <a href="/user/login" class="gamebtn">Play</a>
            {% endif %}
        </div>
    </div>

    <div class="game card game">
        <div class="card-home">
        <img class="card-img-top" src="/assets/images/backCard.png" alt="Card image">
            <h4 class="card-title">Wild Memory Game</h4>
            <p class="card-text">Test your memory! <br>
                Match each pair of cards to win the game!</p>

            {% if(userName != null) %}
                <a href="wildMemoryGame" class="gamebtn">Play</a>
            {% else %}
                <a href="/user/login" class="gamebtn">Play</a>
            {% endif %}
        </div>
    </div>
    </div>


{% endblock %}

