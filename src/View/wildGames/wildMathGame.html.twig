{% extends 'layout.html.twig' %}
{% block link %}
    <link rel="stylesheet prefetch" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css">
    <link rel="stylesheet prefetch" href="https://fonts.googleapis.com/css?family=Coda">
    <link rel="stylesheet prefetch" href="https://fonts.googleapis.com/css?family=Gloria+Hallelujah|Permanent+Marker" >
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Rum+Raisin&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
{% endblock %}
{% block stylesheet %}
    <link rel="stylesheet" href="/assets/css/wildgames.css">
    <style>
        #game_canvas{
            width: 85%;
            background: #716F71;
            padding: 10px;
            border-radius: 4px;
            box-shadow: 8px 9px 26px 0 rgba(46, 61, 73, 0.5);
            display: flex;
            flex-wrap: wrap;
            justify-content: space-around;
            align-items: center;
            margin: 0 0 3em;
        }
        .operand{
            width: 135%;
            padding: 12px 20px;
            margin: 8px 0;
            box-sizing: border-box;
            border: none;
            color: aliceblue;
            height: 80px;
            font-size: 50px;
            background: border-box;
        }
        .operator{
            width: 100%;
            padding: 12px 20px;
            margin: 8px 0;
            box-sizing: border-box;
            border: none;
            color: aliceblue;
            height: 80px;
            font-size: 60px;
            background: border-box;
        }
        #op1, #op2, #operator, #ans, #msg, #submit, #score{
            display: none;;
        }
        #message{
            background: border-box;
            border: none;
            color: aliceblue;
            background: center;
        }
        #answer{
            border:none;
            background: lightgray;
        }
        #btnSubmit, #start{
            color: aliceblue;
            background: center;
        }
        @media (min-width: 768px) {
            #game_canvas {
                width: 500px;
                height: auto;
            }
            .operand, .operator{
                width: 75%;
            }
        }

    </style>
{% endblock %}

{% block title %} Wild Memory Game {% endblock %}
{% block content %}
    <div class="container">
        <header>
            <h1>Wild Math Game</h1>
        </header>

        <section class="score-panel">


            <div class="timer">
            </div>

            <div class="restart" onclick=start_game()>
                <i class="fa fa-repeat"></i>
            </div>
        </section>

        <div class="container" id ="game_canvas">
            <form>
                <div class="timer"></div>
                <div class="row">
                    <div class="col-4"><input id="op1" class = "operand"></div>
                    <div class="col-4"><input id="operator" class = "operator"></div>
                    <div class="col-4"><input id="op2" class = "operand"></div>
                </div>

                <div class="row">
                    <div class="col-lg-8" id="ans"> Answer: <input id="answer"></div>
                    <div class="col-lg-4" id="submit"> <button id="btnSubmit" type="button" onclick="submit_answer()">SUBMIT</button></div>
                </div>
                <div class="row m-3">
                    <div class="col-12 offset-4" id="msg"><input id="message"></div>
                </div>

                <div class="row">
                    <div> <button type="button" onclick="start_game()" id="start">START</button></div>
                    <tr><input id="score" name="score" class = "score"></tr>
                </div>

            </form>

        </div>
        <div id="popup1" class="overlay">
            <div class="popup">
                <a class="close" onclick="playAgain()">Ã—</a>
                <div class="content-1">
                    Congratulations
                </div>
                <div class="content-2">
                    <p>You got <span id=finalScore> </span> questions out of 5 right</p>
                </div>
                <button id="play-again"onclick="playAgain()">
                    Play again ðŸ˜„</a>
                </button>
            </div>
        </div>

        <a href="wildGames" class="btn btn-secondary">QUIT</a>

    </div>
{% endblock %}

{% block javascript %}
<script src=https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js></script>
<script src="/build/mathGame.js"></script>
{% endblock %}
