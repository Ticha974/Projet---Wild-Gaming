{% extends 'layout.html.twig' %}
{% block stylesheet %}
        <meta charset="utf-8">
        <title>ContactUs</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css?family=Teko:700&amp;display=swap" rel="stylesheet">
      <!--  <link rel="stylesheet" href="/assets/css/contact.css"> -->
    <link rel="stylesheet" href="/assets/css/home.css">
    <link rel="stylesheet" href="/assets/css/custom.css">
    <style>
        #typeMessageX {
            margin: 50px auto 30px auto;
            width: 600px;
            height: 300px;
        }
        input.form-control {
            width: 600px;
        }
        #typeNameX {
            margin-top: 30px;
        }
    </style>
{% endblock %}
{% block content %}
<h1 class="header">Contact Us</h1>
<section class="vh-100">
    <!--<div class="container">-->
        <div class="row d-flex justify-content-center align-items-center" style="justify-content: center;">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius: 1rem; width: 700px; height: 600px; margin: auto;">
                    <div class="card-body p-5 text-center">

                        <form action="" method="POST">
                            <div class="mb-md-5 mt-md-4 pb-5">
                            {% if errors %}
                            <div style="color: red">
                            {{ errors }}
                            </div>
                            {% endif %}
                                <div class="form-outline form-white mb-4">
                                    <!--<label for="name">Name:</label>
                                    <input type="text" name="name" id="name" value="{{ name }}">-->
                                    <input type="text" id="typeNameX" name="name" value="{{ name }}" placeholder="Name" class="form-control form-control-lg" />
                                </div>
                                <div class="form-outline form-white mb-4">
                                    <!--<label for="email">Email:</label>
                                    <input type="email" name="email" id="email" value=" {{ email }}">-->
                                    <input type="text" id="typeEmailX" name="email" id="email" value="{{ email }}" placeholder="Email" class="form-control form-control-lg" />
                                </div>
                                <div class="form-outline form-white mb-4">
                                    <!--<label for="subject">Subject:</label>
                                    <input type="text" name="subject" id="subject" value="{{ subject }}">-->
                                    <input type="text" id="typeSubjectX" name="subject" id="subject" value="{{ subject }}" placeholder="Subject" class="form-control form-control-lg" />
                                </div>
                                <div class="form-outline form-white mb-4" style="margin-top: 30px; border-radius: 5px;">
                                    <!--<label for="message">Message</label>
                                    <textarea name="message" cols="30" rows="10">{{ message }}</textarea>-->
                                    <textarea id="typeMessageX" name="message" placeholder="Message" class="form-control form-control-lg">
                                        {{ message }}
                                    </textarea>
                                    <script>
                                        tinymce.init({
                                            selector: 'textarea',
                                            plugins: 'advlist autolink lists link image charmap print preview hr anchor pagebreak',
                                            toolbar_mode: 'floating',
                                        });
                                    </script>
                                </div>
                                <button class="btn btn-outline-light btn-lg px-5" name="send" id="send" type="submit" style="margin: 30px; width: 150px; size: 25px; color: black;">Send</button>
                                <!-- <input type="submit" name="Send" value="Send"> -->
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
     <!--</div>-->
</section>
{% endblock %}
{% block javascript %}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
{% endblock %}

