{% extends 'layout.html.twig' %}

{% block stylesheet %}
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://fonts.googleapis.com/css?family=Teko:700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/assets/css/home.css">

    <style>
        #comment{
            padding: 0px !important;
            margin: 0px !important;
            overflow: hidden;
            word-wrap: break-word;
            text-align: left;
        }
        #username{
            margin: 0px !important;
        }
    </style>
    <!-- Bootstrap CSS -->
{% endblock %}

{% block content %}

        <h1 class="header">WILD GAMING NEWS</h1>

    <div class="row">
        <h5 class="newsShow">{{ news.title }}</h5>
    </div>
        <div class="row">
            {% if (news.gameId == "") %}
                <div class="col-md-2"><a class="btn btn-secondary" href="/news">General</a></div>
            {% else %}
                    <div class="col-md-4"><a class="btn btn-secondary" href="/game/showGame?id={{ news.gameId }}">{{ game.name }}</a></div>
            {% endif %}
        </div>
        <div class="row justify-content-around align-items-center ">
                <!--<iframe width="700" height="424" src="{{ news.video_url_news }}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                <div class="col-lg-7 col-md-6 col-sm-11">
                    <p>{{ news.detail }}</p>
                </div>-->
            {% if (news.img_url_news) %}
                <div class="col-lg-4 col-md-5 col-sm-12 pt-3">
                    <img src=" {{ news.img_url_news }}" height="200px" width="300px">
                </div>
                <div class="col-lg-7 col-md-6 col-sm-11 mt-3">
                    <p class="mt-3">{{ news.detail|raw}}</p>
                </div>
                {% else %}
                    <div class="col-12">
                        <p>{{ news.detail|raw}}</p>
                </div>

            {% endif %}

        </div>


        {% if (comments) %}
            <div class="offset-2 " style="max-width: 70%;padding: 5px;">
                <div class="card-header" style="border-bottom: 1px solid beige;">
                    User Comments
                </div>

                <div class="card-body container">
                    {% for item in comments %}
                        <div class="row">
                        <!--<div class="col-lg-2">-->
                            <p class="text-decoration-underline text-primary" id="username">{{ item.userName }} | {{ item.createdDate }}</p>
                        </div>
                            <!--</div>
                        <div class="col-lg-12">-->
                        <div class="row">
                        <p class="card-text" id="comment">{{ item.comment }}</p></div>
                        <!--</div>-->
                    {% endfor %}

                </div>
            </div>
            {% else %}
                <div class="card-body offset-2 container" style="width: 70%;padding: 5px;">
                    <div class="card-header header" style="border-bottom: 1px solid beige;">
                        User Comments
                    </div>
                    <div class="card-body ">
                        No comments yet.
                    </div>
                </div>
        {% endif %}


        <form action="/news/addComment" method="post">
            <div class="row pt-3">
                {% if (userName) %}
                <input type="hidden" value="{{ news.id }}" name="newsId">


                <div class="col-lg-1 pt-3">
                   <!--<p class="text-decoration-underline text-primary"> {{ userName }}</p>-->
                </div>
                <div class="col-lg-9 col-md-9 col-sm-12">
                    <textarea class="form-control" name="comment" placeholder="Add a comment..."></textarea>
                </div>

                <div class="col-2 pt-2">
                    <input type="submit" value="Comment" class="btncomment btn-primary">
                </div>
                {% endif %}
            </div>
        </form>
        <div class="row">
            <div class="col-6">
                <a href="/news" class="btn btn-outline-primary m-3">Back</a>
            </div>
        </div>
{% endblock %}

{% block javascript %}<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>{% endblock %}
