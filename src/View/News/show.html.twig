{% extends 'layout.html.twig' %}

{% block stylesheet %}
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
{% endblock %}

{% block content %}
    <div class="container">
        <div class="page-header border-bottom">
            <div class="row">
                <div class="col-11">
                    <h2 class="h2 display-1 text-center">WILD GAMING NEWS</h2>
                </div>
            </div>
        </div>
    <div class="row">
        <h6 class="h6 display-6 p-3">{{ news.title }}</h6>
    </div>
        <div class="row">
            {% if (news.gameId == "") %}
                <div class="col-md-2 "><a class="btn btn-secondary" href="/news">General</a></div>
            {% endif %}
            {% if (game.id != null) %}
                    <div class="col-md-2"><a class="btn btn-secondary" href="/news/showGame?id={{ news.gameId }}">{{ game.name }}</a></div>
            {% endif %}
        </div>
        <div class="row justify-content-around align-items-center ">
            {% if (news.img_url_news) %}
            <div class="col-lg-4 col-md-5 col-sm-12 pt-3">
                <img src=" {{ news.img_url_news }}" height="200px" width="300px">
            </div>
                <div class="col-lg-7 col-md-6 col-sm-11">
                    <p>{{ news.detail }}</p>
                </div>
                {% else %}
                    <div class="col-12">
                        <p>{{ news.detail }}</p>
                    </div>
            {% endif %}

        </div>
        <div class="row p-3">
            <p>{{ news.detail }} {{ news.detail }}</p>
        </div>

        {% if (comments) %}
            <div class="card offset-2" style="max-width: 70%;">
                <div class="card-header">
                    User Comments
                </div>
                <div class="card-body">
                    {% for item in comments %}
                        <p class="card-text">{{ item.comment }}</p>
                    {% endfor %}
                </div>
            </div>
        {% endif %}

        <form action="/news/addComment" method="post">
            <div class="row offset-2 pt-3">
                <input type="hidden" value="{{ news.id }}" name="newsId">
                <div class="col-10">
                    <textarea class="form-control" name="comment"></textarea>
                </div>
                <div class="col-2 pt-2">
                    <input type="submit" value="Comment" class="btn btn-primary">
                </div>

            </div>
        </form>
        <div class="row">
            <div class="col-6">
                <a href="/news" class="btn btn-outline-primary m-3">Back</a>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascript %}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
{% endblock %}
