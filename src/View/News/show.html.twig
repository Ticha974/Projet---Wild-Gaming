{% extends 'layout.html.twig' %}

{% block stylesheet %}
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
{% endblock %}

{% block content %}
    <div class="container">
        <div class="page-header border-bottom">
            <div class="row">
                <div class="col-11">
                    <h2 class="h2 display-1 text-center">WILD GAMING NEWS</h2>
                </div>
            </div>
        </div>
    <div class="row">
        <h6 class="h6 display-6 p-3">{{ news.title }}</h6>
    </div>
        <div class="row">
            {% if (news.gameId == "") %}
                <div class="col-md-2"><a class="btn btn-secondary" href="/news">General</a></div>
            {% else %}
                    <div class="col-md-4"><a class="btn btn-secondary" href="/game/showGame?id={{ news.gameId }}">{{ game.name }}</a></div>
            {% endif %}
        </div>
        <div class="row justify-content-around align-items-center ">
                <!--<iframe width="700" height="424" src="{{ news.video_url_news }}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                <div class="col-lg-7 col-md-6 col-sm-11">
                    <p>{{ news.detail }}</p>
                </div>-->
            {% if (news.img_url_news) %}
            <div class="col-lg-4 col-md-5 col-sm-12 pt-3">
                <img src=" {{ news.img_url_news }}" height="200px" width="300px">
            </div>
                <div class="col-lg-7 col-md-6 col-sm-11 mt-3">
                    <!--<p>{{ news.detail [:160] ~ ' ...' }}</p>-->
                    <p class="mt-3">{{  news.detail|length > 200 ? news.detail|slice(0, 585) : news.detail  }}</p>
                </div>
                {% else %}
                    <div class="col-12">
                        <p>{{ news.detail  [:160] ~ ' ...'}}</p>
                    </div>
            {% endif %}

        </div>
        <div class="row p-3">
            <p>{{ news.detail|slice(585)}}</p>
        </div>

        {% if (comments) %}
            <div class="card offset-2" style="max-width: 70%;">
                <div class="card-header">
                    User Comments
                </div>
                <div class="card-body container">
                    {% for item in comments %}
                        <div class="row">
                        <div class="col-lg-2">
                            <p class="text-decoration-underline text-primary">{{ item.userName }}</p>
                        </div>
                        <div class="col-lg-12">
                        <p class="card-text">{{ item.comment }}</p></div>
                        </div>
                    {% endfor %}
                </div>
            </div>
            {% else %}
                <div class="card offset-2" style="max-width: 70%;">
                    <div class="card-header">
                        User Comments
                    </div>
                    <div class="card-body ">
                        No comments yet.
                    </div>
                </div>
        {% endif %}

        <form action="/news/addComment" method="post">
            <div class="row offset-2 pt-3">
                <input type="hidden" value="{{ news.id }}" name="newsId">
                <div class="col-lg-1 pt-3">
                   <p class="text-decoration-underline text-primary"> {{ userName }}</p>
                </div>
                <div class="col-lg-9 col-md-9 col-sm-12">
                    <textarea class="form-control" name="comment" placeholder="Add a comment..."></textarea>
                </div>
                <div class="col-2 pt-2">
                    <input type="submit" value="Comment" class="btn btn-primary">
                </div>

            </div>
        </form>
        <div class="row">
            <div class="col-6">
                <a href="/news" class="btn btn-outline-primary m-3">Back</a>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascript %}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
{% endblock %}
