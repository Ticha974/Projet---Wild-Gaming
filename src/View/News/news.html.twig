{% extends 'layout.html.twig' %}

{% block stylesheet %}
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://fonts.googleapis.com/css?family=Teko:700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/assets/css/home.css">
    <!-- Bootstrap CSS -->
{% endblock %}

{% block content %}

        <h1 class="header">WILD GAMING NEWS</h1>
                <div class="col-1 pt-5">
                     <!--<button type="button" class="btn btn-outline-primary"></button>-->
                    <a href="/news/add" class="btn btn-outline-primary">Add</a>
                </div>
        {% for item in news %}
        <div class="row justify-content-around align-items-center p-3">
            <div class="col-lg-4 col-md-5 col-sm-12 ">
                <img src=" {{ item.img_url_news }}" height="300px">
            </div>
            <div class="col-lg-7 col-md-6 col-sm-11 border">
                <h5 class="news"><a class="link-dark" href="/news/show?id={{ item.id }}">{{ item.title }}</a></h5>
                <h6>{{ item.createdDate }}</h6>
                <div class="limit-text" style="  height:100px; overflow:hidden; color: #919191;">
                <p class="news">{{ item.detail|raw }}</p>
                </div>
                <p>...</p>
            </div>
            <div class="col-lg-1 col-md-1 col-sm-1">
                <!--<button type="button" class="btn btn-outline-primary m-3" ></button>-->
                <a href="/news/edit?id={{ item.id }}" class="btn edit">Edit</a>
            </div>
        </div>
        {% endfor  %}
{% endblock %}

{% block javascript %}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
{% endblock %}
