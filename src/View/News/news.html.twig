

{% extends 'layout.html.twig' %}

{% block stylesheet %}
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
{% endblock %}

{% block content %}
<!--{{ dump(news) }}-->
    <div class="container">
        <div class="page-header border-bottom">
            <div class="row">
                <div class="col-11">
                    <h2 class="h2 display-1 text-center">WILD GAMING NEWS</h2>
                </div>
                <div class="col-1 pt-5">
                     <!--<button type="button" class="btn btn-outline-primary"></button>-->
                    <a href="/news/add" class="btn btn-outline-primary">Add</a>
                </div>
            </div>
        </div>
        {% for item in news %}
        <div class="row justify-content-around align-items-center p-3">
            <div class="col-lg-4 col-md-5 col-sm-12">
                <img src=" {{ item.img_url_news }}" height="200px" width="300px">
            </div>
            <div class="col-lg-7 col-md-6 col-sm-11">

                <h5 class="h5 "><a class="link-dark" href="/news/show?id={{ item.id }}">{{ item.title }}</a>  {{ item.createdDate }}</h5>
                <p>{{ item.detail }}</p>
            </div>
            <div class="col-lg-1 col-md-1 col-sm-1">
                <!--<button type="button" class="btn btn-outline-primary m-3" ></button>-->
                <a href="/news/edit?id={{ item.id }}" class="btn btn-outline-primary m-3">Edit</a>
            </div>
        </div>
        {% endfor  %}


    </div>
{% endblock %}

{% block javascript %}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
{% endblock %}