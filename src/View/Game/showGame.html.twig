{% extends 'layout.html.twig' %}

{% block stylesheet %}
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://fonts.googleapis.com/css?family=Teko:700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/assets/css/home.css">
{% endblock %}

{% block content %}

        <div class="row">
            <h5 class="newsShow game" style="margin-left: 180px;">{{ game.name }}</h5>
        </div>
    <div class="row justify-content-around align-items-center p-3">
                <div class="trailer">
                    <iframe width="700" height="424" src="{{ game.video_url }}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                    <p class="synopsis">{{ game.synopsis }}</p>

                    <div class="link-gamenews">
                    <a href="/news">WILD GAMING NEWS</a>
                    </div>

                    {% for item in news %}
                    <div class="row justify-content-around align-items-center pt-3">
                        <div class="col-lg-4">
                            <img src="{{ item.img_url_news}} " height="200px" width="300px">
                        </div>
                        <div class="col-lg-8">

                            <h5 class="h5title">{{ item.title }}</h5>
                            <div class="detail" style="margin-left: 10px; color: #919191">{{ item.detail|raw }}</div>
                        </div>
                    </div>
                </div>

        <div class="card-showgame">
            <img class="card-img-top show" src="{{ game.img_url_game }}" alt="Card image cap">
            <ul class="list-group-flush">
                <li class="list-group-item-game"><span class="infoGame">Genre</span> <span class="dataGame"> {{ game.genre }}</span></li>
                <li class="list-group-item-game"><span class="infoGame">Mode</span> <span class="dataGame"> {{ game.mode }}</span></li>
                <li class="list-group-item-game"><span class="infoGame">Date de sortie</span> <span class="dataGame"> {{ game.createDate }}</span></li>
                <li class="list-group-item-game"><span class="infoGame">Editeur</span> <span class="dataGame">{{ game.editor }}</span></li>
            </ul>
        </div>
    </div>

        {% endfor %}

{% endblock %}

{% block javascript %}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
{% endblock %}
