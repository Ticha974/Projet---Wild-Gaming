<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0"
     xmlns:content="http://purl.org/rss/1.0/modules/content/"
     xmlns:wfw="http://wellformedweb.org/CommentAPI/"
     xmlns:dc="http://purl.org/dc/elements/1.1/"
     xmlns:atom="http://www.w3.org/2005/Atom"
     xmlns:sy="http://purl.org/rss/1.0/modules/syndication/"
     xmlns:slash="http://purl.org/rss/1.0/modules/slash/"
     xmlns:georss="http://www.georss.org/georss"
     xmlns:geo="http://www.w3.org/2003/01/geo/wgs84_pos#"
>
    <channel>
        <title>Wild Gaming</title>
        <description>Flux RSS 2.0</description>
        <lastBuildDate>{{ item.createdDate | date("D, d M Y h:i:s O")}}</lastBuildDate>
        <link>http://{{ address }}</link>
        {% for oneNews in news %}
            <item>
                <title>{{ oneNews.title }}</title>
                <description>{{ oneNews.detail [:160] ~ ' ...'}}</description>
                <pubDate>{{ oneNews.createdDate | date("D, d M Y h:i:s O")}}</pubDate>
                <link>http://{{ address }}/news/show?id={{ oneNews.id }}</link>
            </item>
        {% endfor  %}
    </channel>
</rss>
